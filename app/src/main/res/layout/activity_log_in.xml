<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.auth.LogIn">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/jobs"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="41sp"
        android:textColor="@color/colorPrimary"
        android:lineSpacingExtra="13sp"
        android:text="Work Now"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/d4"
        android:text="Discover the best jobs from our app \n don&apos;t wait and just do it"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d40"
        android:layout_marginStart="@dimen/d55"
        android:layout_marginEnd="@dimen/d55"
        android:background="@drawable/our_button_red"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="5sp"
        android:text="Login"
        android:id="@+id/login"
        android:layout_height="@dimen/d35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginStart="@dimen/d55"
        android:layout_marginEnd="@dimen/d55"
        android:background="@drawable/our_button_red"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="5sp"
        android:id="@+id/signUp"
        android:text="Create an account"
        android:layout_height="@dimen/d35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginStart="@dimen/d55"
        android:layout_marginEnd="@dimen/d55"
        android:background="@drawable/our_button_face"
        android:textSize="14sp"
        android:textColor="#020202"
        android:lineSpacingExtra="5sp"
        android:text="Login with Facebook"
        android:layout_height="@dimen/d35"/>


</LinearLayout>